@model LoginModel

@{
    ViewBag.Title = "Log In";
    Layout = "_AdminLayout";

}

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4" style="margin:50px 0 50px 0">
            <form asp-action="Login" method="post">
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="col-md-12">
                        <div class="card-body">
                            <div style="width:100%" class="text-center">
                                <h1 class="h3 mb-3 font-weight-normal"><i class="fa fa-key"></i>&nbsp;Login</h1>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">Username</label>
                                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                                <input asp-for="Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <div><span asp-validation-for="Password" class="text-danger"></span></div>
                                <input asp-for="Password" class="form-control" />
                            </div>
                            <div class="text-center">
                                <button class="btn btn-primary" type="submit">Log In</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
